{
  "name": "learning-javascript",
  "version": "1.0.0",
  "description": "Combining Maths with Javascript in learning exercises",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "node node_modules/.bin/jest src --coverage",
    "lint": "node node_modules/.bin/eslint ./src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebabel-eu/learning-javascript.git"
  },
  "keywords": [
    "maths",
    "javascript"
  ],
  "author": "Dave Pitts <dgapitts@gmail.com>",
  "license": "GPL VERSION 3",
  "bugs": {
    "url": "https://github.com/ebabel-eu/learning-javascript/issues"
  },
  "homepage": "https://github.com/ebabel-eu/learning-javascript#readme",
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.6.4"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
